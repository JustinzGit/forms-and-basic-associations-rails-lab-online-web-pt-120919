<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <p><%= f.label :title %>
  <%= f.text_field :title %></p>

  <p><%= f.label :artist_name %>
  <%= f.text_field :artist_name %></p>

  <p><%= f.collection_select :genre_id, Genre.all, :id, :name %></p>

  <%= f.fields_for :notes do |note_field| %>
    <p><%= note_field.label :content %>
       <%= note_field.text_field :content %></p>
  <% end %>

  <%= f.submit %>
<% end %>
